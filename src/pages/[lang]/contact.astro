---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/ui';
import { MessageCircle, Mail, Clock, Phone } from 'lucide-react';

export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'te' } },
    { params: { lang: 'hi' } },
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);
---

<Layout title="Contact | Prakash Hyundai" lang={lang}>
  <div class="container mx-auto px-6 py-20">
    <div class="grid lg:grid-cols-2 gap-20">
        <div>
            <h1 class="text-5xl font-bold text-[#1C1C1C] mb-6">{t('contact.title')}</h1>
            <p class="text-xl text-gray-600 mb-12">Whether you want to book a service, test drive a car, or just say hello, we are here for you.</p>
            
            <div class="space-y-8">
                <div class="flex items-start gap-6">
                    <div class="p-4 bg-green-100 text-green-700 rounded-2xl">
                        <MessageCircle size={32} />
                    </div>
                    <div>
                        <h3 class="text-xl font-bold mb-1">WhatsApp Us</h3>
                        <p class="text-gray-500 mb-2">Fastest way to get quotes & bookings.</p>
                        <a href="https://wa.me/919876543210" class="text-green-700 font-bold hover:underline">Chat Now -></a>
                    </div>
                </div>

                <div class="flex items-start gap-6">
                    <div class="p-4 bg-blue-100 text-[#002C5F] rounded-2xl">
                        <Phone size={32} />
                    </div>
                    <div>
                        <h3 class="text-xl font-bold mb-1">Call Us</h3>
                        <p class="text-gray-500 mb-2">Mon-Sat from 9am to 8pm.</p>
                        <a href="tel:919876543210" class="text-[#002C5F] font-bold hover:underline">+91 98765 43210</a>
                    </div>
                </div>

                 <div class="flex items-start gap-6">
                    <div class="p-4 bg-gray-100 text-gray-700 rounded-2xl">
                        <Clock size={32} />
                    </div>
                    <div>
                        <h3 class="text-xl font-bold mb-1">Service Hours</h3>
                        <p class="text-gray-500">Monday - Saturday</p>
                        <p class="text-gray-900 font-semibold">09:00 AM - 07:30 PM</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-[#F5F6F7] rounded-3xl p-10">
            <h2 class="text-2xl font-bold mb-6">Send a Message</h2>
            <form class="space-y-4">
                <div>
                    <label class="block text-sm font-bold text-gray-700 mb-2">Your Name</label>
                    <input type="text" class="w-full p-4 rounded-xl border border-gray-200 focus:outline-none focus:border-[#002C5F]" placeholder="John Doe" />
                </div>
                <div>
                    <label class="block text-sm font-bold text-gray-700 mb-2">Phone Number</label>
                    <input type="tel" class="w-full p-4 rounded-xl border border-gray-200 focus:outline-none focus:border-[#002C5F]" placeholder="+91 90000 00000" />
                </div>
                <div>
                    <label class="block text-sm font-bold text-gray-700 mb-2">Message</label>
                    <textarea class="w-full p-4 rounded-xl border border-gray-200 focus:outline-none focus:border-[#002C5F] h-32" placeholder="I am interested in..."></textarea>
                </div>
                <button class="w-full bg-[#002C5F] text-white font-bold py-4 rounded-xl hover:bg-[#001f42] transition-colors">
                    Send Request
                </button>
            </form>
        </div>
    </div>
  </div>
</Layout>